<!DOCTYPE html>
<html>
  <head>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="header-item" href="/index">Home</a></li>
        <li class="breadcrumb-item"><a class="header-item" href="/challenges">Challenges</a></li>
        <li class="breadcrumb-item"><a class="header-item" href="/mypage">History</a></li>
        <li class="breadcrumb-item"><a class="header-item" href="/help">Help</a></li>
        <li class="breadcrumb-item"><a class="header-item" href="/users/logout">Logout</a></li>
      </ol>
    </nav>
    <title>My Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/index.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <div class="page-div">
      <div class="card challenges-card-title">
        <div class="card-body"><h1>Completed Challenges</h1></div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>10 Questions</h4>
            <h4>Easy</h4>
            <h4 id="best-time-1"></h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button
                id="submit-1"
                type="button"
                onclick="location.href = 'http://localhost:3000/mydetails?difficulty=1';"
                class="btn btn-dark"
              >
                View History
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>10 Questions</h4>
            <h4>Normal</h4>
            <h4 id="best-time-2"></h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button
                id="submit-2"
                type="button"
                onclick="location.href = 'http://localhost:3000/mydetails?difficulty=2';"
                class="btn btn-dark"
              >
                View History
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>10 Questions</h4>
            <h4>Advanced</h4>
            <h4 id="best-time-3"></h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button
                id="submit-3"
                type="button"
                onclick="location.href = 'http://localhost:3000/mydetails?difficulty=3';"
                class="btn btn-dark"
              >
                View History
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>10 Questions</h4>
            <h4>EXTREME</h4>
            <h4 id="best-time-4"></h4>
          </div>

          <form>
            <div class="form-button mt-3">
              <button
                id="submit-4"
                type="button"
                onclick="location.href = 'http://localhost:3000/mydetails?difficulty=4';"
                class="btn btn-dark"
              >
                View History
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  $(document).ready(function () {
    $.ajax({
      type: "GET",
      url: `http://localhost:3000/users/get-user-by-token`,
    }).then((res) => {
      $.ajax({
        type: "GET",
        url: `http://localhost:3000/challenges/best-time`,
        data: {email: res},
        dataType: "json",
      }).then((res) => {
        $(`#best-time-1`).text(`Best Time: ${res.easy}`);
        $(`#best-time-2`).text(`Best Time: ${res.normal}`);
        $(`#best-time-3`).text(`Best Time: ${res.advanced}`);
        $(`#best-time-4`).text(`Best Time: ${res.extreme}`);
      });
    });
  });
</script>
