  <body>
    <div class="page-div">
      <div class="card challenges-card-title">
        <div class="card-body"><h1>Challenges</h1></div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>3 to 6 Questions</h4>
            <h4>Easy</h4>
            <h4>1 Minute</h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button id="submit-1" type="button" onclick="location.href = 'http://localhost:3000/answer?difficulty=1';" class="btn btn-dark">
                Start Challenge
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>4 to 7 Questions</h4>
            <h4>Normal</h4>
            <h4>45 Seconds</h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button id="submit-2" type="button" onclick="location.href = 'http://localhost:3000/answer?difficulty=2';" class="btn btn-dark">
                Start Challenge
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>5 to 8 Questions</h4>
            <h4>Advanced</h4>
            <h4>30 Seconds</h4>
          </div>
          <form>
            <div class="form-button mt-3">
              <button id="submit-3" type="button" onclick="location.href = 'http://localhost:3000/answer?difficulty=3';" class="btn btn-dark">
                Start Challenge
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card challenge-card">
        <div class="card-body">
          <div class="challenges-card-info">
            <h4>6 to 10 Questions</h4>
            <h4>EXTREME</h4>
            <h4>20 Seconds</h4>
          </div>

          <form>
            <div class="form-button mt-3">
              <button id="submit-4" type="button" onclick="location.href = 'http://localhost:3000/answer?difficulty=4';" class="btn btn-dark">
                Start Challenge
              </button>
            </div>
          </form>
        </div>
      </div>
